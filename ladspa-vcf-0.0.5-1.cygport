DESCRIPTION="LADSPA audio EQ biquad filters"
HOMEPAGE="http://www.suse.de/~mana/ladspa.html"
SRC_URI="http://www.suse.de/~mana/${P#ladspa-}.tar.bz2"
SRC_DIR=${P#ladspa-}

src_compile() {
	lndirs
	cd ${B}
	verbose ${CC} ${CFLAGS} -DWITH_CV_IN ${LDFLAGS} -shared -o vcf.so vcf.so.c
}

src_install() {
	exeinto /usr/lib/ladspa
	doexe ${B}/*.so
}
